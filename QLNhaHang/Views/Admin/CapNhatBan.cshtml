@model QLNhaHang.Models.Ban

@{
    Layout = "Header";
    ViewData["Title"] = "CapNhatBan";
}
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Cập nhật bàn</h3>
            <form class="form-sample" asp-action="CapNhatBan" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaBan" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" asp-for="SoLuongNguoi">Số lượng người</label>
                            <div class="col-sm-9">
                                <input type="number" class="form-control" asp-for="SoLuongNguoi" />
                                <span asp-validation-for="SoLuongNguoi" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="ViTri">Vị trí</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="ViTri" readonly />
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary me-2">Cập nhật</button>
                <a class="btn btn-light" asp-action="DSBanAn">Quay Lại Danh Sách</a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
