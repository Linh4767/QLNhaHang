        <script>
            $(document).ready(function () {
                // Hàm để tải lại danh sách email chưa đọc
                function loadUnreadEmails() {
                    $.ajax({
                        url: '@Url.Action("GetUnreadEmails", "Home")',  // URL để lấy email chưa đọc
                        method: 'GET',
                        dataType: 'json',
                        beforeSend: function () {
                            $('#emailDropdown').html('<p>Loading...</p>');  // Hiển thị loading trong dropdown
                        },
                        success: function (response) {
                            // Kiểm tra xem có email chưa đọc hay không
                            if (Array.isArray(response.data) && response.data.length > 0) {
                                var unreadCount = response.data.length;
                                $('#unreadCount').text(unreadCount);  // Cập nhật số lượng email chưa đọc

                                var dropdownContent = '';
                                // Duyệt qua các email và hiển thị chúng
                                response.data.forEach(function (email) {
                                    var emailBody = email.body;  // Lấy nội dung email

                                    // Tạo HTML cho mỗi email
                                    dropdownContent += `
                                                    <a class="dropdown-item preview-item">
                                                        <div class="preview-item-content flex-grow py-2">
                                                            <p class="fw-light small-text mb-0">${emailBody}</p>
                                                            <button class="btn btn-primary confirm-btn mt-3" data-email-body="${encodeURIComponent(emailBody)}">Confirm</button>
                                                        </div>
                                                    </a>
                                                    <div class="dropdown-divider"></div>
                                                `;
                                });

                                // Thêm các email vào dropdown
                                $('#emailDropdown').html(dropdownContent);
                            } else {
                                $('#emailDropdown').html('<p>No unread emails found.</p>');  // Không có email chưa đọc
                            }
                        },
                        error: function () {
                            $('#emailDropdown').html('<p>Error fetching emails.</p>');  // Xử lý khi gặp lỗi
                        }
                    });
                }

                // Gọi hàm để tải email chưa đọc ngay khi trang được tải
                loadUnreadEmails();

                // Sự kiện khi nhấn nút "Confirm"
                $(document).on('click', '.confirm-btn', function () {
                    var emailBody = decodeURIComponent($(this).data('email-body'));  // Lấy nội dung email từ data attribute
                    confirmReservation(emailBody);  // Gọi hàm xác nhận đặt bàn
                    // if (emailBody) {
                    //     localStorage.setItem('emailBody', emailBody);  // Lưu emailBody vào localStorage
                    // }
                });

                // Hàm xác nhận đặt bàn
                function confirmReservation(emailBody) {
                    $.ajax({
                        url: '@Url.Action("CheckReservationMatch", "Home")',  // URL để kiểm tra khớp đặt bàn
                        method: 'POST',
                        data: { emailBody: emailBody },  // Gửi nội dung email lên server
                        success: function (response) {
                            console.log(emailBody);
                            if (response.success) {
                                alert('Xác nhận thành công!');  // Thông báo khi đặt bàn thành công
                                // Gọi lại AJAX để tải lại danh sách email chưa đọc
                                loadUnreadEmails();  // Gọi lại hàm tải email chưa đọc
                                let storedEmails = JSON.parse(localStorage.getItem('emailBodies')) || [];
                                if (!storedEmails.includes(emailBody)) {
                                    storedEmails.push(emailBody);  // Thêm emailBody mới vào mảng
                                    localStorage.setItem('emailBodies', JSON.stringify(storedEmails));  // Lưu lại mảng vào localStorage
                                }
                            }
                        },
                        error: function () {
                            alert('Error checking reservation.');  // Thông báo lỗi nếu có
                        }
                    });
                }

                // var storedEmailBody = localStorage.getItem('emailBody');
                // console.log("NgayHHH" + storedEmailBody);
                // if (storedEmailBody) {
                //     // Nếu có, gọi hàm xử lý ngay khi trang load
                //     xacNhan(storedEmailBody);
                // }
                let storedEmailBody = JSON.parse(localStorage.getItem('emailBodies')) || [];

                storedEmailBody.forEach(function (emailBody) {
                    console.log("Processing email: " + emailBody);  // Kiểm tra giá trị email
                    xacNhan(emailBody);  // Gọi hàm xacNhan cho mỗi emailBody
                    // clearEmailBody();
                });
                function xacNhan(storedEmailBody) {
                    $.ajax({
                        url: '@Url.Action("XacNhanDatBan", "Home")',  // URL để kiểm tra khớp đặt bàn
                        method: 'POST',
                        data: { storedEmailBody: storedEmailBody },  // Gửi nội dung email lên server
                        success: function (response) {
                            if (response.success) {
                                clearEmailBody();  // Thông báo khi đặt bàn thành công
                            }
                            else {
                            }
                        },
                        error: function () {
                            alert('Error checking reservation.');  // Thông báo lỗi nếu có
                        }
                    });
                }
                function clearEmailBody() {
                    localStorage.removeItem('emailBodies');  // Sử dụng đúng key 'emailBodies'
                }
            });
