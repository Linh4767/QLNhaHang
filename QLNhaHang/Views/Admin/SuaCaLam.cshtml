@model QLNhaHang.Models.Ca
@{
    Layout = "Header";
}
@{
    ViewData["Title"] = "SuaCaLam";
}
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin</title>
    <style>
             ul.validation
        -summary-errors li {

             list-style-type: none;

         }
    </style>
</head>
<body class="with-welcome-text">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Quản Lý Thông Tin Ca Làm</h4>
                <form class="form-sample" method="post">
                    <!-- Hiển thị thông báo lỗi ở đầu form -->
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <label class="col-form-label me-3 fw" style="margin-bottom: 0; margin-right: 10px; width: 100px;">Mã ca làm</label>
                                <input asp-for="MaCa" type="hidden" class="form-control" style="flex: 1;" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 d-flex align-items-center" style="margin-top: 25px;">
                            <label class="col-form-label me-3" style="margin-bottom: 0; margin-right: 10px; width: 100px; position: relative; top: -10px;">Ca làm</label>
                            <div class="form-group me-2">
                                <!-- Thời gian bắt đầu -->
                                <input asp-for="ThoiGianBatDau" id="CaLamBatDau" class="form-control" type="time" value="@Model.ThoiGianBatDau?.ToString("hh\\:mm")" />
                                <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
                            </div>
                            <span class="mx-2 align-self-center" style="position: relative; top: -10px;">-</span>
                            <div class="form-group ms-2">
                                <!-- Thời gian kết thúc -->
                                <input asp-for="ThoiGianKetThuc" id="CaLamKetThuc" class="form-control" type="time" value="@Model.ThoiGianKetThuc?.ToString("hh\\:mm")" />
                                <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 d-flex align-items-center">
                            <label class="col-form-label fw me-3" style="margin-bottom: 0; width: 100px;">Phân loại</label>
                            <div class="d-flex align-items-center">
                                <div class="form-check me-4 d-flex align-items-center">
                                    <input asp-for="LoaiCa" type="radio" class="form-check-input" style="margin-left: 0px;" id="membershipRadios1" value="fulltime">
                                    <label class="form-check-label ms-2" for="membershipRadios1" style="margin-right: 10px;">Full-time</label>
                                </div>
                                <div class="form-check d-flex align-items-center">
                                    <input asp-for="LoaiCa" type="radio" class="form-check-input" id="membershipRadios2" value="parttime">
                                    <label class="form-check-label ms-2" for="membershipRadios2">Part-time</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary me-2 mt-3" asp-action="SuaCalam">Sửa Ca Làm</button>
                    <a class="btn btn-light mt-3" asp-action="XemDSThongTinCa">Quay Lại Danh Sách</a>
                </form>
            </div>
        </div>
    </div>

</body>
</html>