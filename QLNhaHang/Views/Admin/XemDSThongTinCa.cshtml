@model IEnumerable<QLNhaHang.Models.Ca>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "Header";
    ViewData["Title"] = "XemDSThongTinCa";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Star Admin2 </title>
</head>
<body class="with-welcome-text">

    <div class="container mt-4">
        <h2 class="mb-4">Thông Tin Ca Làm</h2>

        <!-- Thanh tìm kiếm -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <input type="text" class="form-control w-50" placeholder="Tìm kiếm người dùng..." id="searchInput" />
            <button class="btn btn-success" id="btnAdd" onclick="window.location.href='ThemCaLam'" asp-action="ThemCaLam">Thêm mới</button>
        </div>

        <!-- Bảng -->
        <div class="table-responsive" id="caLamTableContainer">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th><center><b>Mã Ca</b></center></th>
                        <th><center><b>Thời Gian Bắt Đầu</b></center></th>
                        <th><center><b>Thời Gian Kết Thúc</b></center></th>
                        <th><center><b>Phân Loại</b></center></th>
                        <th><center><b>Chức Năng</b></center></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <center>@Html.DisplayFor(modelItem => item.MaCa)</center>
                            </td>
                            <td>
                                <center>@Html.DisplayFor(modelItem => item.ThoiGianBatDau)</center>
                            </td>
                            <td>
                                <center>@Html.DisplayFor(modelItem => item.ThoiGianKetThuc)</center>
                            </td>
                            <td>
                                <center>@Html.DisplayFor(modelItem => item.LoaiCa)</center>
                            </td>
                            <td>
                                <center>
                                    <a class="btn btn-warning btn-sm" asp-controller="Admin" asp-action="SuaCalam" asp-route-id="@item.MaCa">Sửa</a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Admin" asp-action="XoaCaLam" asp-route-id="@item.MaCa">Xóa</a>
                                </center>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
