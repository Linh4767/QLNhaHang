@model QLNhaHang.Models.DatBan
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "Header";
    ViewData["Title"] = "ThemDatBan";
}
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin</title>
</head>
<body class="with-welcome-text">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Thông Tin Đặt Bàn</h4>
                <form class="form-sample" method="post" asp-action="ThemCaLam">
                    <p class="card-description"> Thêm Ca Làm </p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <label class="col-form-label me-3 fw" style="margin-bottom: 0; margin-right: 10px; width: 100px;">Mã đặt bàn</label>
                                <input asp-for="MaDatBan" type="text" class="form-control" style="flex: 1;" />
                            </div>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary me-2 mt-3">Thêm Đặt Bàn</button>
                    <a class="btn btn-light mt-3" asp-action="XemDSDatBan">Quay Lại Danh Sách</a>
                </form>

            </div>
        </div>
    </div>

</body>
</html>