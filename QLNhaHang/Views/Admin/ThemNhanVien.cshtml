        document.addEventListener("DOMContentLoaded", function () {
            // Lấy các phần tử cần kiểm tra
            const submitBtn = document.getElementById("submitBtn");
            const tenNhanVienInput = document.getElementById("TenNV");
            const fileInput = document.getElementById("fileInput");
            const fileInfoInput = document.getElementById("fileInfoInput");
            const fileErrorSpan = document.getElementById("fileError");
            // Kiểm tra các phần tử
            if (!tenNhanVienInput || !fileInput || !fileErrorSpan || !submitBtn) {
                console.error("Một hoặc nhiều phần tử không tồn tại");
                return;
            }

            // Kiểm tra Tên nhân viên
            function validateTenNhanVien(value) {
                if (!value) return "Tên nhân viên là bắt buộc.";
                if (/\s{2,}/.test(value)) return "Tên nhân viên không được chứa 2 khoảng trắng liên tiếp.";
                if (!/^[\p{L}\s]+$/u.test(value)) return "Tên nhân viên chỉ được chứa chữ cái, dấu cách";
                return ""; // Không có lỗi
            }
            
            // Kiểm tra File ảnh
            function validateFileInput() {
                const file = fileInput.files.length > 0 ? fileInput.files[0] : null;
                const validExtensions = ["jpg", "jpeg", "png", "gif"];
                fileInfoInput.value = file ? file.name : ""; // Hiển thị tên file nếu có

                if (!file) {
                    fileErrorSpan.textContent = "Vui lòng chọn một file ảnh.";
                    submitBtn.disabled = true;
                    return;
                }

                const fileExtension = file.name.split('.').pop().toLowerCase();
                if (!validExtensions.includes(fileExtension)) {
                    fileErrorSpan.textContent = "Chỉ chấp nhận file ảnh (jpg, jpeg, png, gif).";
                    fileInput.value = ""; // Reset nếu file không hợp lệ
                    fileInfoInput.value = ""; // Xóa tên file hiển thị
                    submitBtn.disabled = true;
                } else {
                    fileErrorSpan.textContent = ""; // Xóa lỗi
                    validateForm(); // Kiểm tra lại form
                }
            }

            // Hàm kiểm tra toàn bộ form
            function validateForm() {
                const tenNhanVien = tenNhanVienInput.value.trim();

                const tenNhanVienError = validateTenNhanVien(tenNhanVien);

                // Hiển thị lỗi
                document.getElementById("TenNVError").textContent = tenNhanVienError || "";


                // Kiểm tra trạng thái nút submit
                if (tenNhanVienError || !tenNhanVien || !fileInput.files[0] ) {
                    submitBtn.disabled = true;
                } else {
                    submitBtn.disabled = false;
                }
            }

            // Gắn sự kiện
            tenNhanVienInput.addEventListener("input", validateForm);

            // fileInput.addEventListener("change", validateFileInput);
            fileInput.addEventListener("change", function () {
                // Cập nhật lại khi ảnh thay đổi
                validateFileInput();
                validateForm();
            });
            // Kiểm tra lần đầu khi load trang
            validateForm();
            validateFileInput();
        });

