@model QLNhaHang.Models.NhanVien

@{
    Layout = "Header";
    ViewData["Title"] = "Thêm Nhân Viên";
}

<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Star Admin2</title>
</head>
<body class="with-welcome-text">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Quản Lý Thông Tin Nhân Viên</h4>
                <form class="form-sample" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MaNv" class="col-sm-3 col-form-label">Mã nhân viên</label>
                                <div class="col-sm-9">
                                    <input asp-for="MaNv" type="text" class="form-control" />
                                </div>
                                <span asp-validation-for="MaNv" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label asp-for="HinhAnh">Hình Ảnh</label>
                                <input type="file" name="HinhAnh" asp-for="HinhAnh" class="file-upload-default" id="fileInput">
                                <div class="input-group col-xs-12">
                                    <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image" id="fileInfoInput">
                                    <span class="input-group-append">
                                        <button class="file-upload-browse btn btn-primary" type="button" id="fileUploadBrowse">Upload</button>
                                    </span>
                                </div>
                                <span asp-validation-for="HinhAnh" id="fileError" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="TenNv" class="col-sm-3 col-form-label">Họ tên</label>
                                <div class="col-sm-9">
                                    <input asp-for="TenNv" type="text" id="TenNV" class="form-control" required />
                                    <span asp-validation-for="TenNv" id="TenNVError" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="NgayVaoLam" class="col-sm-3 col-form-label">Ngày vào làm</label>
                                <div class="col-sm-9">
                                    <input asp-for="NgayVaoLam" id="NgayVaoLam" class="form-control" type="date" />
                                    <span asp-validation-for="NgayVaoLam" id="NVLError" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="Cccd" class="col-sm-3 col-form-label">Số căn cước</label>
                                <div class="col-sm-9">
                                    <input asp-for="Cccd" type="text" id="CCCD" class="form-control" pattern="^[0-9]{12}$" title="CCCD phải có 12 chữ số." required />
                                    <span asp-validation-for="Cccd" id="CCCDError" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="GioiTinh" class="col-sm-3 col-form-label">Giới tính</label>
                                <div class="col-sm-4">
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            <input asp-for="GioiTinh" type="radio" class="form-check-input" name="GioiTinh"
                                            id="membershipRadios1" value="Nam" checked> Nam
                                        </label>
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="form-check" name="GioiTinh">
                                        <label class="form-check-label">
                                            <input asp-for="GioiTinh" type="radio" class="form-check-input" name="GioiTinh"
                                            id="membershipRadios2" value="Nữ"> Nữ
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="Sdt" class="col-sm-3 col-form-label">Số điện thoại</label>
                                <div class="col-sm-9">
                                    <input asp-for="Sdt" type="text" id="STD" class="form-control" pattern="^0[0-9]{9,10}$"
                                    title="Số điện thoại phải bắt đầu bằng 0 và có 10-11 số." required />
                                    <span asp-validation-for="Sdt" id="STDError" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="Email" class="col-sm-3 col-form-label">Email</label>
                                <div class="col-sm-9">
                                    <input asp-for="Email" type="text" id="Email" class="form-control" required
                                           pattern="^[a-z0-9]+(\.[a-z0-9]+);a-z0-9]+\.[a-z0-9]+$"
                                           title="Định dạng email của bạn chưa đúng." />
                                    <span asp-validation-for="Email" id="EmailError" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group row">
                                <label asp-for="MaBhyt" class="col-sm-1 col-form-label">BHYT</label>
                                <div class="col-sm-11">
                                    <input asp-for="MaBhyt" type="text" id="BHYT" class="form-control" pattern="^[A-Z0-9]+$"
                                           title="Mã BHYT chỉ được chứa chữ in hoa và số" required />
                                    <span asp-validation-for="MaBhyt" id="BHYTError" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group row">
                                <label asp-for="DiaChi" class="col-sm-1 col-form-label">Địa chỉ</label>
                                <div class="col-sm-11">
                                    <input asp-for="DiaChi" type="text" id="DiaChi" class="form-control" pattern="^[a-zA-Z0-9À-ÿ, /]+$"
                                           title="Địa chỉ chỉ được chứa chữ thường, chữ in hoa, chữ có dấu, số và các dấu ',' và '/'." required />
                                    <span asp-validation-for="DiaChi" id="DiaChiError" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row col-xs-12">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MaViTriCv" class="col-sm-3 col-form-label">Vị trí</label>
                                <div class="col-sm-9">
                                    <select asp-for="MaViTriCv" class="form-control" asp-items="@ViewBag.ViTriCongViecs"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="TrangThai" class="col-sm-3 col-form-label">Trạng thái</label>
                                <div class="col-sm-9">
                                    <select name="TrangThai" class="form-control">
                                        <option asp-for="TrangThai" value="1">Đang làm việc</option>
                                        <option asp-for="TrangThai" value="0">Nghỉ việc</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row col-xs-12">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="MaQuanLy" class="col-sm-3 col-form-label">Quản lý</label>
                                <div class="col-sm-9">
                                    <select asp-for="MaQuanLy" class="form-control" asp-items="@ViewBag.NhanViens">
                                        <option value="">Chọn Quản Lý</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label asp-for="ThuViec" class="col-sm-3 col-form-label">Hợp đồng</label>
                                <div class="col-sm-9">
                                    <select class="form-control" asp-for="ThuViec">
                                        <option value="false">Thử việc</option>
                                        <option value="true">Chính thức</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary me-2" id="submitBtn" asp-action="ThemNhanVien">Thêm Nhân Viên</button>
                    <a class="btn btn-light" asp-action="XemDSNhanVien">Quay Lại Danh Sách</a>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/typeahead.js/0.11.1/typeahead.bundle.min.js"></script>

    <script src="~/js/file-upload.js"></script>
    <script src="~/js/typeahead.js"></script>
    <script src="~/js/select2.js"></script>
