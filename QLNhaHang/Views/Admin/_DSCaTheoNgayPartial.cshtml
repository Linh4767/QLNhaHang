@model IEnumerable<QLNhaHang.Models.SoLuongChiTietTrongCa>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Ca</th>
            <th>Thời Gian Bắt Đầu</th>
            <th>Thời Gian Kết Thúc</th>
            <th>Tên Vị Trí</th>
            <th>Số Lượng</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MaQuanLyNavigation.MaCa)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaQuanLyNavigation.MaCaNavigation.ThoiGianBatDau)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaQuanLyNavigation.MaCaNavigation.ThoiGianKetThuc)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaViTriCvNavigation.TenViTriCv)</td>
                    <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                    <td>
                        <a class="btn btn-primary btn-sm btnDangKy" style="display:none;" data-maql="@item.MaQuanLyChiTiet" asp-controller="Admin" asp-action="DangKy" asp-route-maQL="@item.MaQuanLyNavigation.MaQuanLy" asp-route-date="@ViewData["SelectedDate"]">Đăng ký</a>
                        @* <button class="btn btn-success d-flex align-items-center trangThai" style="display:none;" data-maql="@item.MaQuanLyChiTiet">
                <span class="badge bg-primary text-light" style="width: 10px; height: 10px; border-radius: 2px; margin-right: 5px;"></span> Đã hoàn thành
                </button> *@
                        <a class="btn btn-success btn-sm trangThai" style="display:none;">Đã đăng ký</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>

